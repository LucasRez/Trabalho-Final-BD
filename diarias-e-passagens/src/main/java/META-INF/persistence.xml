<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.Favorecido</class> -->
<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.Funcao</class> -->
<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.OrgaoSubordinado</class> -->
<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.OrgaoSuperior</class> -->
<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.Pagamento</class> -->
<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.Programa</class> -->
<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.SubFuncao</class> -->
<!-- 		<class>br.unb.cic.DiariasEPassagens.entidades.UnidadeGestora</class> -->

		<exclude-unlisted-classes>false</exclude-unlisted-classes>		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/TrabFinalBD"/>
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />							
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
  			<property name="hibernate.show_sql" value="false" />
  			<property name="hibernate.format_sql" value="false" />
			
		</properties>
	</persistence-unit>
	
</persistence>